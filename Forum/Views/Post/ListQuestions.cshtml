



@model List<Forum.Models.Post>

@{
    ViewBag.Title = "ListQuestions";
}

<div class="container">
    <div class="well">
        <h2>Answers</h2>

        <table class="table table-striped table-hover">
            <thead>
                
                <tr>
                    <th>Title</th>
                    <th>Author</th>

                </tr>
            </thead>

            <tbody>
                
                <tr>
                    <td>
                        @Html.ActionLink("New Topic", "CreatePost", "Post", null, new { @class = "btn btn-warning" })
                    </td>
                </tr>



                @foreach (var question in Model)
                {
                    @:
                    <tr>
                 
                        <td>@Html.ActionLink(question.Title, "ListAnswers", "Post", new { @id = question.PostId }, null)</td>
                        <td>@question.Author.FullName</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>